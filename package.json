{
  "name": "brandklout-automation-testing",
  "version": "1.0.0",
  "description": "BrandKlout E2E testing automation with Playwright and BDD",
  "scripts": {
    "test": "playwright test",
    "test:api": "playwright test --project=api-tests",
    "test:ui": "playwright test --project=ui-tests",
    "test:bdd": "bddgen && playwright test",
    "bdd:gen": "bddgen",
    "bdd:debug": "bddgen && playwright test --debug",
    "bdd:headed": "bddgen && playwright test --headed",
    "allure:serve": "allure serve allure-results",
    "setup": "playwright install --with-deps"
  },
  "keywords": [
  "brandklout",
    "playwright",
    "e2e",
    "testing",
    "automation",
    "web",
    "bdd"
  ],
  "author": "BrandKlout Team",
  "license": "UNLICENSED",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.0.0",
    "playwright-bdd": "^7.0.0",
    "typescript": "^5.0.0",
    "allure-playwright": "^2.10.0"
  }
}